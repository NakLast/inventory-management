<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
            height: 2rem;
            display: flex;
            justify-content: space-between;
            /* Align items horizontally, with space in between */
        }

        .header-buttons {
            display: flex;
        }

        button {
            margin-right: 10px;
            color: white;
            padding: 8px;
            background-color: transparent;
            border: 0;
            cursor: pointer;
        }

        #logout-btn {
            margin-left: auto;
            background-color: #007bff;
            padding: 8px 15px;
        }

        .content-container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        nav {
            color: black;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1;
            background-color: white;
        }

        nav h1 {
            margin: 0;
        }

        #add-product-btn {
            color: white;
            background-color: #007bff;
            padding: 8px 15px;
            border: 0;
            cursor: pointer;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            align-items: center;
            justify-content: center;
            z-index: 2;
        }

        .form-container {
            background-color: #fff;
            padding: 60px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
        }

        .container {
            display: flex;
            justify-content: space-between;
            margin: 10px 0;
        }

        label {
            flex: 1;
            margin-right: 10px;
        }

        input {
            flex: 2;
        }

        .close-btn {
            color: white;
            background-color: red;
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            border: none;
            padding: 4px;
            border-radius: 50%;
            z-index: 1;
        }

        #submit-btn {
            color: white;
            background-color: #007bff;
            padding: 8px 15px;
            border: 0;
            cursor: pointer;
        }

        .edit-btn {
            color: white;
            background-color: #28a745;
            padding: 8px 15px;
            border: 0;
            cursor: pointer;
        }

        .del-btn {
            background-color: red;
            color: white;
            border: none;
            cursor: pointer;
        }

        .confirm-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            align-items: center;
            justify-content: center;
            z-index: 3;
        }

        .confirm-form-container {
            background-color: #fff;
            padding: 60px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
        }

        .confirm-buttons {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .button-row {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: white;
        }

        /* Dynamic column widths */
        th:nth-child(1),
        td:nth-child(1) {
            width: 10%;
        }

        th:nth-child(2),
        td:nth-child(2) {
            width: 30%;
        }

        th:nth-child(3),
        td:nth-child(3),
        th:nth-child(4),
        td:nth-child(4),
        th:nth-child(5),
        td:nth-child(5),
        th:nth-child(6),
        td:nth-child(6) {
            width: 10%;
        }
    </style>
</head>

<body>
    <header>
        <div class="header-buttons">
            <button onclick="redirectToDashboard()">Dashboard</button>
            <button onclick="redirectToInventory()">Inventory</button>
            <button onclick="redirectToUserTable()">User</button>
            <button onclick="redirectToAddEmployee()">Employee</button>
            <button onclick="redirectToAddRecordWorkTime()">Record Work Time</button>
        </div>
        <button id="logout-btn" onclick="logout()">Logout</button>
    </header>

    <div class="content-container">
        <nav>
            <h1>Product</h1>
            <button id="add-product-btn" onclick="openOverlay()">Add Product</button>
        </nav>

        <table>
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Cost</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% productData.forEach((items)=>{%>
                    <tr>
                        <td>
                            <%=items.product_id%>
                        </td>
                        <td>
                            <%=items.product%>
                        </td>
                        <td>
                            <%=items.quantity%>
                        </td>
                        <td>
                            <%=items.cost%>
                        </td>
                        <td>
                            <%=items.amount%>
                        </td>
                        <td>
                            <a href="/product/detail/<%= items.id %>">
                                <button class="edit-btn">Edit</button>
                            </a>
                            <a href="/product/delete/<%= items.id %>">
                                <button class="del-btn">Delete</button>
                            </a>
                        </td>
                    </tr>
                    <%});%>
            </tbody>
        </table>
    </div>

    <div class="confirm-overlay" id="confirmOverlay">
        <div class="confirm-form-container">
            <h2>Confirm Deletion</h2>
            <p>Are you sure you want to delete this product?</p>
            <div class="confirm-buttons">
                <button class="edit-btn" onclick="confirmDelete('<%= productData.id %>')">Yes</button>
                <button class="del-btn" onclick="cancelDelete()">Cancel</button>
            </div>
        </div>
    </div>

    <div class="overlay" id="overlay">
        <div class="form-container">
            <h2>Add Product Form</h2>
            <form method="POST" action="/addProduct" enctype="application/x-www-form-urlencoded">
                <span class="close-btn" onclick="closeOverlay()">Ã—</span>
                <div class="container">
                    <label for="Product ID">Product ID:</label>
                    <input type="text" placeholder="Enter Product ID" name="product_id" required>
                </div>
                <div class="container">
                    <label for="Product">Product:</label>
                    <input type="text" placeholder="Enter Product" name="product" required>
                </div>
                <div class="container">
                    <label for="Quantity">Quantity:</label>
                    <input type="number" placeholder="Enter Quantity" name="quantity" required>
                </div>
                <div class="container">
                    <label for="Amount">Amount:</label>
                    <input type="number" placeholder="Enter Amount" name="amount" required>
                </div>
                <button id="submit-btn" type="submit">Submit</button>
            </form>
        </div>
    </div>

    <script>
        function redirectToDashboard() {
            window.location.href = '/dashboard'
        }

        function redirectToInventory() {
            window.location.href = '/inventory'
        }

        function redirectToAddProduct() {
            window.location.href = '/addProduct-form'
        }

        function redirectToUserTable() {
            window.location.href = '/user'
        }

        function redirectToAddEmployee() {
            window.location.href = '/employee'
        }

        function redirectToAddRecordWorkTime() {
            window.location.href = '/recordWorkTime'
        }

        let productIdToDelete

        function openConfirmOverlay(id) {
            productIdToDelete = id
            document.getElementById("confirmOverlay").style.display = "flex"
        }

        function cancelDelete() {
            document.getElementById("confirmOverlay").style.display = "none";
        }

        function confirmDelete(id) {
            document.getElementById("confirmOverlay").style.display = "none";
            window.location.href = '/deleteRecordInventory'
        }

        function openOverlay() {
            document.getElementById("overlay").style.display = "flex"
        }

        function closeOverlay() {
            document.getElementById("overlay").style.display = "none"
        }

        function logout() {
            window.location.href = '/logout'
        }
    </script>
</body>

</html>